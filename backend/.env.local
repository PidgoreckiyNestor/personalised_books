# Local Development Environment Configuration
# Copy this to .env for local development with MinIO
#
# Usage:
#   cp backend/.env.local backend/.env
#   # Then start services with docker-compose.local.yml

# Database (PostgreSQL from docker-compose.local.yml)
DATABASE_URL=postgresql+asyncpg://books:books@localhost:5433/books

# S3 Storage (MinIO from docker-compose.local.yml)
AWS_ENDPOINT_URL=http://localhost:9000
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin
S3_BUCKET_NAME=personalized-books
AWS_REGION_NAME=us-east-1

# ComfyUI (from docker-compose.local.yml)
COMFY_BASE_URL=http://localhost:8188

# Celery (Redis from docker-compose.local.yml)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Optional: JWT Secret for authentication
JWT_SECRET_KEY=local-development-secret-change-in-production

# Optional: Debug mode
DEBUG=true
